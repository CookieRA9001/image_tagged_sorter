<TaggingPage>
    currentImage: currentImage
    imageNameInput: imageNameInput
    searchTagInput: searchTagInput
    tagBox: tagBox
    addedTagBox: addedTagBox
    imageBoxBtn: imageBoxBtn
    nextBtn: nextBtn
    skipBtn: skipBtn
    botBtnGrid: botBtnGrid
    bulkTagInput: bulkTagInput

    GridLayout:
        cols: 2
        size: (root.width, root.height)
        pos: root.pos
        
        FloatLayout:
            padding: (10, 10)
            size_hint: (0.7, 1)

            Image:
                id: currentImage
                fit_mode: "contain"
                size_hint: (0.96,0.96)
                pos_hint: {"x": 0.02, "top": 0.98}

            Button:
                id: imageBoxBtn
                text: "Click me to select image/s"
                color: (0,0,0,1)
                size_hint: (1, 1)
                pos_hint: {"x": 0, "top": 1}
                halign: "center"
                valign: "middle"
                background_color: (0,0,0,0)
                on_release: root.openImageSelect()

        StackLayout:
            padding: (10, 10)
            spacing: 10
            size_hint: (0.3, 1)

            TextInput:
                id: imageNameInput
                multiline: False
                size_hint: (1, None)
                height: 40

            BoxLayout:
                size_hint: (1, None)
                orientation: "vertical"
                height: 220

                TextInput:
                    id: searchTagInput
                    multiline: False
                    size_hint: (1, None)
                    height: 40
                    on_text: root.searchTags(self.text)

                StackLayout:
                    height: 180
                    size_hint: (1, None)
                    orientation: "tb-lr"

                    canvas:
                        Color:
                            rgba: (0.9,0.9,0.9,1)
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    TagSelect:
                        text: "Add New Tag"
                        on_release: root.openAddTagPopup()
                        background_color: (0.75,0.75,0.75,1)

                    ScrollView:
                        size_hint: (1, None)
                        do_scroll_y: True
                        do_scroll_x: False
                        height: 150
                        width: self.parent.width
                        bar_width: 3
                        always_overscroll: False

                        StackLayout:
                            id: tagBox
                            size_hint: (1, None)

            StackLayout:
                size_hint: (1, None)
                height: root.height-360
                orientation: "tb-lr"

                canvas:
                    Color:
                        rgba: (0.8,0.8,0.8,1)
                    Rectangle:
                        pos: self.pos
                        size: self.size
                
                TextInput:
                    id: bulkTagInput
                    multiline: False
                    on_text_validate: root.addBulkTag(self.text)
                    size_hint: (1, None)
                    height: 40
                    hint_text: "bulk, tag, input, here"

                ScrollView:
                    size_hint: (1, None)
                    do_scroll_y: True
                    do_scroll_x: False
                    height: root.height-400
                    width: self.parent.width
                    bar_width: 3
                    always_overscroll: False

                    StackLayout:
                        id: addedTagBox
                        size_hint: (1, None)
                        spacing: 5
                        padding: 5

            GridLayout:
                id: botBtnGrid
                size_hint: (1, None)
                height: 40
                cols: 2

                Button:
                    id: nextBtn
                    size_hint: (0.8, 1)
                    text: "Next"
                    on_release: root.saveTaggedImage()
                
                Button:
                    id: skipBtn
                    size_hint: (0.2, 1)
                    text: "Skip"
                    on_release: root.skipImage()