<PalletPage>
    imageList1: imageList1
    imageList2: imageList2
    imageList3: imageList3
    fullImageView: fullImageView
    fullImageName: fullImageName

    PageLayout:
        size: (root.width, root.height)

        StackLayout:
            size_hint: (1,1)

            Button:
                text: "Open Folder"
                size_hint: (1,0.05)
                on_release: root.openPalletFolder()

            ScrollView:
                size_hint: (1, None)
                do_scroll_y: True
                do_scroll_x: False
                size: self.parent.size

                StackLayout:
                    size_hint: (1, None)
                    padding: (10, 10)
                    spacing: 10
                    height: max(root.imageList1.height,root.imageList2.height,root.imageList3.height)*1.05

                    StackLayout:
                        size_hint: (1/3, None)
                        id: imageList1
                        spacing: 10

                    StackLayout:
                        size_hint: (1/3, None)
                        id: imageList2
                        spacing: 10

                    StackLayout:
                        size_hint: (1/3, None)
                        id: imageList3
                        spacing: 10

        StackLayout:
            canvas:
                Color:
                    rgba: (0.9,0.9,0.9,1)
                Rectangle:
                    pos: self.pos
                    size: self.size

            Image:
                id: fullImageView
                size_hint: (1,0.95)
                fit_mode: "contain"
            
            Label:
                id: fullImageName
                size_hint: (1,0.049) 
                color: (0,0,0,1)         

           
    