<PalletPage>
    fullImageView: fullImageView
    fullImageName: fullImageName
    palletColumnLayout: palletColumnLayout
    columnCountInput: columnCountInput

    PageLayout:
        size: (root.width, root.height)

        StackLayout:
            size_hint: (1,1)

            BoxLayout:
                orientation: 'horizontal'
                size_hint: (1,0.05)

                Button:
                    text: "Open Folder"
                    size_hint: (0.6,1)
                    on_release: root.openPalletFolder()
                Button:
                    text: "Col--"
                    size_hint: (0.095,1)
                    on_release: root.removeColum()

                TextInput:
                    id: columnCountInput
                    size_hint: (0.195,1)
                    multiline: False
                    font_size: 18
                    input_filter: 'int'
                    on_text_validate: root.setColumnCount(self.text)
                    
                Button:
                    text: "Col++"
                    size_hint: (0.095,1)
                    on_release: root.addColum()

            ScrollView:
                size_hint: (1, None)
                do_scroll_y: True
                do_scroll_x: False
                size: self.parent.size

                StackLayout:
                    id: palletColumnLayout
                    size_hint: (1, None)
                    padding: (10, 10)
                    spacing: 10
                    # height: max(root.imageList1.height,root.imageList2.height,root.imageList3.height)*1.05

                    # PalletColumn:
                    #     id: imageList1

                    # PalletColumn:
                    #     id: imageList2

                    # PalletColumn:
                    #     id: imageList3

        StackLayout:
            canvas:
                Color:
                    rgba: (0.9,0.9,0.9,1)
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                orientation: 'horizontal'

                Button:
                    text: "<"
                    size_hint: (0.03,1)
                    on_release: root.prevImage()

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: (0.9,1)

                    Image:
                        id: fullImageView
                        size_hint: (1,0.98)
                        fit_mode: "contain"
                    
                    Label:
                        id: fullImageName
                        size_hint: (1,0.019) 
                        color: (0,0,0,1)      

                Button:
                    text: ">"
                    size_hint: (0.03,1)
                    on_release: root.nextImage()   

           
    