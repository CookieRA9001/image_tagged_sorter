<Tutorial>

    username: username
    password: password
    output_label: output_label

    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 2
            row_force_default: True
            row_default_height: 50

            Label: 
                text:'User Name'
                size_hint_x: None
                width: 150
                color: (1,0,0,1)
                bold: True
                italic: True
                font_size: 20

            TextInput:
                id: username
                multiline: False
                background_color: (0,1,0,1)

            Label: 
                text:'Password'
                size_hint_x: None
                width: 150
                color: (1,0,0,1)
                bold: True
                italic: True
                font_size: 20

            TextInput:
                id: password
                multiline: False
                background_color: (0,0,1,1)
                password: True

        Button: 
            text: "Confirm"
            font_size: 32
            size_hint_y: None
            height: 70
            background_color: (0,0,1,1)
            on_press: root.confirm()

        Label: 
            id: output_label
            text: ""