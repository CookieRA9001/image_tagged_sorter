<Base>
    tab: tab
    tabPanel: tabPanel

    BoxLayout:
        orientation: 'vertical'
        size: (root.width, root.height)

        GridLayout:
            id: tabPanel
            cols: 4
            rows: 1
            col_default_width: 200
            row_default_height: 40
            row_force_default: True
            col_force_default: True
            size: (root.width, 40)
            size_hint: (None, None)

        GridLayout:
            cols: 1
            id: tab
            size: (root.width, root.height)

            canvas:
                Color:
                    rgba: (0.7,0.7,0.7,1)
                Rectangle:
                    pos: self.pos
                    size: self.size