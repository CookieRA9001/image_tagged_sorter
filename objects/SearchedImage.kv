<SearchedImage>
    img: img
    size_hint: (1, None)
    height: self.width/img.image_ratio
    canvas:
        Color:
            rgba: (0.9,0.9,0.9,1)
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        size: self.parent.size
        size_hint: (1,1)
        pos: root.pos

        Image:
            id: img
            fit_mode: "contain"
            size_hint:(1,1)
            pos_hint: {"x": 0, "top": 1}

        Button:
            color: (0,0,0,1)
            size_hint: (1, 1)
            pos_hint: {"x": 0, "top": 1}
            halign: "center"
            valign: "middle"
            background_color: (0,0,0,0)
            on_release: root.openImageFullView()

        Button:
            text: "+"
            color: (0,0,0,1)
            size_hint: (None, None)
            size: (30,30)
            pos: (root.x + root.width - 30, root.y + root.height - 30)
            halign: "center"
            valign: "middle"
            background_color: (0,0,0,0)
            on_release: root.addToPallet()